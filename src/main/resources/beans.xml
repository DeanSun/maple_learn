<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="beanPostProcessor" class="com.spring.processflow.MyBeanPostProcessor" ></bean>
    <bean id="instantiationAwareBeanPostProcessor" class="com.spring.processflow.MyInstantiationAwareBeanPostProcessor" ></bean>
    <bean id="beanFactoryPostProcessor" class="com.spring.processflow.MyBeanFactoryPostProcessor"></bean>
    <bean id="person" class="com.spring.processflow.Person" init-method="myInit" destroy-method="myDestroy" scope="singleton" p:name="张三" p:address="广州"
          p:phone="15900000000"/>
</beans>